<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="chap8.Resources.Styles.ChatStyles">
    <Style x:Key="BackgroundColor"
           TargetType="ContentPage">
        <Setter Property="BackgroundColor"
                Value="{AppThemeBinding Light=WhiteSmoke, Dark=Black}"/>
    </Style>
    <Style x:Key="TitleText"
           TargetType="Label">
        <Setter Property="FontSize"
                Value="31"/>
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light=SkyBlue, Dark=White}"/>
        <Setter Property="FontFamily"
                Value="Roboto-Regular"/>
    </Style>

    <Style x:Key="FrendsStriesStyle"
           TargetType="Label">
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light=SkyBlue, Dark=WhiteSmoke}"/>
        <Setter Property="FontSize"
                Value="17"/>

    </Style>

    <Style x:Key="ChatTitleStyle"
           TargetType="Label">
        <Setter Property="FontAttributes"
                Value="Bold"/>
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light=SkyBlue, Dark=White}"/>
    </Style>
     
    
    
    
</ResourceDictionary>