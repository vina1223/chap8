<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="chap8.View.Reset_Password.EmailPassword"
             NavigationPage.HasNavigationBar="False"
             Style="{StaticResource BackgroundColor}"
             Title="EmailPassword">
    <ScrollView>
        <StackLayout>
        <StackLayout VerticalOptions="EndAndExpand">
            <Image Source="dotbot_net"/>
            <Label Text="Password reset e-mail has been sent"
                   Style="{StaticResource Titlet}"
                   HorizontalTextAlignment="Center"
                   />
            <Label Text="A password resent email has been send to your e-mail address."
                   Style="{StaticResource SubTitle}"
                   HorizontalTextAlignment="Center"
                   />
            
        </StackLayout>
            <Button Text="Set a New Password"
                    Style="{StaticResource ButtonStyle}"
                    Clicked="NewClicked"
                    
                    />
        </StackLayout>
    </ScrollView>
</ContentPage>