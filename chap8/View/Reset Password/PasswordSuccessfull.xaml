<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="chap8.View.Reset_Password.PasswordSuccessfull"
             NavigationPage.HasNavigationBar="False"
             Style="{StaticResource BackgroundColor}"
             Title="PasswordSuccessfull">
    <ScrollView>
        <StackLayout Margin="10">
        <StackLayout VerticalOptions="EndAndExpand">
            <Image Source="dotnet_bot"/>
            <Label Text="New password confirmed successful"
                   Style="{StaticResource Titlet }"
                   />
            <Label Text="You have successfully conform your new password. Please, use your new password when logging in."
                   Style="{StaticResource SubTitle}"
                   />
            
        </StackLayout>
            <Button Text="Okay"
                    Style="{StaticResource ButtonStyle}"
                    />
        </StackLayout>
    </ScrollView>
</ContentPage>